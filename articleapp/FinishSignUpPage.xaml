<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="articleapp.FinishSignUpPage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#000000" Offset="0.0" />
            <GradientStop Color="#1a0b2e" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>


    <ScrollView>
        <Grid RowSpacing="20" Padding="24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Profile Picture Section -->
            <VerticalStackLayout Grid.Row="0" Spacing="15" Margin="0,40,0,0">
                <Frame CornerRadius="75" 
                       HeightRequest="150" 
                       WidthRequest="150" 
                       Padding="0"
                       IsClippedToBounds="True"
                       HorizontalOptions="Center"
                       BackgroundColor="#1E293B"
                       BorderColor="#334155">
                    <Image x:Name="ProfileImage"
                           Source="default_avatar.png"
                           Aspect="AspectFill"/>
                </Frame>

                <Button Text="Choose Photo"
                        TextColor="White"
                        FontFamily="Jersey15"
                        FontSize="16"
                        WidthRequest="200"
                        HeightRequest="40"
                        HorizontalOptions="Center">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4F46E5" Offset="0.0" />
                            <GradientStop Color="#7C3AED" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.CornerRadius>20</Button.CornerRadius>
                </Button>
            </VerticalStackLayout>

            <!-- Hobbies Section Title -->
            <VerticalStackLayout Grid.Row="1" Spacing="8">
                <Label Text="Choose Your Interests"
                       TextColor="White"
                       FontSize="28"
                       FontFamily="Jersey15"
                       HorizontalOptions="Center"/>
                <Label Text="Select up to 5 hobbies that interest you"
                       TextColor="#94A3B8"
                       FontSize="16"
                       FontFamily="Jersey15"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

           

            <!-- add a bunch of hobbies here  -->

            <Grid Grid.Row="2" ColumnSpacing="10" RowSpacing="10" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Mock Hobbies -->
                <Frame Grid.Row="0" Grid.Column="0" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Reading" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
                <Frame Grid.Row="0" Grid.Column="1" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Traveling" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
                <Frame Grid.Row="0" Grid.Column="2" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Cooking" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Gardening" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Photography" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="2" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Hiking" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>

                <Frame Grid.Row="2" Grid.Column="0" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Painting" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
                <Frame Grid.Row="2" Grid.Column="1" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Music" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
                <Frame Grid.Row="2" Grid.Column="2" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Dancing" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>

                <Frame Grid.Row="3" Grid.Column="0" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Gaming" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
                <Frame Grid.Row="3" Grid.Column="1" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Cycling" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
                <Frame Grid.Row="3" Grid.Column="2" CornerRadius="20" BackgroundColor="#1E293B" Padding="10">
                    <Label Text="Swimming" TextColor="White" FontFamily="Jersey15" FontSize="16" HorizontalOptions="Center"/>
                </Frame>
            </Grid>

            <VerticalStackLayout Grid.Row="3" Margin="0,0,0,30">
                <Label Text="Selected: 0/5"
                       TextColor="#94A3B8"
                       FontSize="16"
                       FontFamily="Jersey15"
                       HorizontalOptions="Center"/>

                <Button Text="Continue"
                        TextColor="White"
                        FontFamily="Jersey15"
                        FontSize="18"
                        Margin="0,20"
                        HeightRequest="56"
                        IsEnabled="False">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4F46E5" Offset="0.0" />
                            <GradientStop Color="#7C3AED" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.CornerRadius>28</Button.CornerRadius>
                </Button>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>