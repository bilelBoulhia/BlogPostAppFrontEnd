<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="articleapp.SpecificArticle">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#000000" Offset="0.0" />
            <GradientStop Color="#1a0b2e" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">

            <Grid Margin="0,10">
                <Button ImageSource="back.png"
                        BackgroundColor="Transparent"
                        HeightRequest="40"
                        WidthRequest="40"
                        HorizontalOptions="Start"/>

                <Button Text="⋮"
                        FontSize="24"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        HorizontalOptions="End"
                        HeightRequest="40"
                        WidthRequest="40"/>
            </Grid>

           

           
         

      
            <Grid ColumnDefinitions="Auto,*,Auto" 
                  ColumnSpacing="10">
                <Frame Grid.Column="0"
                       HeightRequest="40"
                       WidthRequest="40"
                       CornerRadius="20"
                       Padding="0"
                       IsClippedToBounds="True">
                    <Image Source="{Binding AuthorImage}"
                           Aspect="AspectFill"/>
                </Frame>

                <VerticalStackLayout Grid.Column="1" 
                                   Spacing="5">
                    <Label Text="{Binding AuthorName}"
                           TextColor="White"
                           FontFamily="Jersey15"
                           FontSize="16"/>
                    <Label Text="{Binding PublishDate}"
                           TextColor="#94A3B8"
                           FontFamily="Jersey15"
                           FontSize="14"/>
                </VerticalStackLayout>

                <Button Grid.Column="2"
                        Text="Follow"
                        BackgroundColor="#4F46E5"
                        TextColor="White"
                        FontFamily="Jersey15"
                        CornerRadius="15"
                        HeightRequest="30"
                        Padding="15,0"/>
            </Grid>

            <Label Text="tmnyik"
          TextColor="White"
          FontSize="24"
          FontFamily="Jersey15"
          LineBreakMode="WordWrap"/>
            <!-- Article Image -->
            <Frame Padding="0"
                 IsClippedToBounds="True"
                 CornerRadius="16">
            
                <Image Source="{Binding ArticleImage}"
            Aspect="AspectFill"
            HeightRequest="250"/>
            </Frame>
            <!-- Article Content -->
            <Label Text="{Binding Content}"
                   TextColor="#E2E8F0"
                   FontFamily="Jersey15"
                   LineHeight="1.6"/>

            <!-- Interaction Buttons -->
            <Grid ColumnDefinitions="Auto,Auto,*" 
                  ColumnSpacing="20"
                  Margin="0,20">
                <HorizontalStackLayout Grid.Column="0" 
                                     Spacing="5">
                    <Button ImageSource="heart.png"
                            BackgroundColor="Transparent"
                            HeightRequest="24"
                            WidthRequest="24"/>
                    <Label Text="{Binding LikesCount}"
                           TextColor="#94A3B8"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" 
                                     Spacing="5">
                    <Button ImageSource="comment.png"
                            BackgroundColor="Transparent"
                            HeightRequest="24"
                            WidthRequest="24"/>
                    <Label Text="{Binding CommentsCount}"
                           TextColor="#94A3B8"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Button Grid.Column="2"
                        ImageSource="bookmark.png"
                        BackgroundColor="Transparent"
                        HeightRequest="24"
                        WidthRequest="24"
                        HorizontalOptions="End"/>
            </Grid>

            <!-- Comments Section -->
            <BoxView HeightRequest="1"
                     Color="#334155"
                     Margin="0,10"/>

            <Label Text="Comments"
                   TextColor="White"
                   FontSize="20"
                   FontFamily="Jersey15"
                   Margin="0,10"/>

            <!-- Comments List -->
            <CollectionView ItemsSource="{Binding Comments}"
                          ItemsLayout="VerticalList"
                          Margin="0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E293B"
                               Margin="0,0,0,15"
                               Padding="15"
                               CornerRadius="12"
                               BorderColor="#334155">
                            <Grid RowSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Comment Header -->
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Frame Grid.Column="0"
                                           HeightRequest="35"
                                           WidthRequest="35"
                                           CornerRadius="17.5"
                                           Padding="0"
                                           IsClippedToBounds="True">
                                        <Image Source="{Binding UserImage}"
                                               Aspect="AspectFill"/>
                                    </Frame>

                                    <VerticalStackLayout Grid.Column="1" 
                                                       Margin="10,0">
                                        <Label Text="{Binding UserName}"
                                               TextColor="White"
                                               FontFamily="Jersey15"/>
                                        <Label Text="{Binding CommentDate}"
                                               TextColor="#94A3B8"
                                               FontSize="12"
                                               FontFamily="Jersey15"/>
                                    </VerticalStackLayout>

                                    <Button Grid.Column="2"
                                            Text="⋮"
                                            FontSize="20"
                                            TextColor="White"
                                            BackgroundColor="Transparent"/>
                                </Grid>

                                <!-- Comment Content -->
                                <Label Grid.Row="1"
                                       Text="{Binding Content}"
                                       TextColor="#E2E8F0"
                                       FontFamily="Jersey15"/>

                                <!-- Comment Actions -->
                                <HorizontalStackLayout Grid.Row="2" 
                                                     Spacing="15">
                                    <Button ImageSource="heart.png"
                                            BackgroundColor="Transparent"
                                            HeightRequest="20"
                                            WidthRequest="20"/>
                                    <Label Text="{Binding LikesCount}"
                                           TextColor="#94A3B8"
                                           VerticalOptions="Center"
                                           FontSize="14"/>
                                    <Label Text="Reply"
                                           TextColor="#4F46E5"
                                           VerticalOptions="Center"
                                           FontFamily="Jersey15"
                                           FontSize="14"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add Comment Section -->
            <Frame BackgroundColor="#1E293B"
                   Padding="15"
                   CornerRadius="25"
                   BorderColor="#334155"
                   Margin="0,10,0,30">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry Placeholder="Write a comment..."
                           PlaceholderColor="#94A3B8"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           FontFamily="Jersey15"/>
                    <Button Grid.Column="1"
                            Text="Post"
                            BackgroundColor="#4F46E5"
                            TextColor="White"
                            FontFamily="Jersey15"
                            CornerRadius="15"
                            Padding="15,0"/>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>