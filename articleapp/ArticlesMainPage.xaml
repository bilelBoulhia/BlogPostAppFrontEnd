<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="articleapp.ArticlesMainPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#000000" Offset="0.0" />
            <GradientStop Color="#1a0b2e" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="24,40">
            <!-- Search Bar -->
            <Frame BackgroundColor="#1E293B" 
                   Padding="15" 
                   CornerRadius="25"
                   BorderColor="#334155">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Grid.Column="0"
                           Source="search.png"
                           HeightRequest="20"
                           WidthRequest="20"/>
                    <Entry Grid.Column="1"
                           Placeholder="Search articles..."
                           PlaceholderColor="#94A3B8"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           FontFamily="Jersey15"/>
                </Grid>
            </Frame>

            <!-- Categories ScrollView -->
            <ScrollView Orientation="Horizontal" 
                       HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="10">
                    <Frame BackgroundColor="#4F46E5" 
                           Padding="15,8"
                           CornerRadius="20">
                        <Label Text="All" 
                               TextColor="White"
                               FontFamily="Jersey15"/>
                    </Frame>
                    <Frame BackgroundColor="#2D1F47" 
                           Padding="15,8"
                           CornerRadius="20">
                        <Label Text="Technology" 
                               TextColor="White"
                               FontFamily="Jersey15"/>
                    </Frame>
                    <Frame BackgroundColor="#2D1F47" 
                           Padding="15,8"
                           CornerRadius="20">
                        <Label Text="Science" 
                               TextColor="White"
                               FontFamily="Jersey15"/>
                    </Frame>
                    <Frame BackgroundColor="#2D1F47" 
                           Padding="15,8"
                           CornerRadius="20">
                        <Label Text="Gaming" 
                               TextColor="White"
                               FontFamily="Jersey15"/>
                    </Frame>
                    <Frame BackgroundColor="#2D1F47" 
                           Padding="15,8"
                           CornerRadius="20">
                        <Label Text="Health" 
                               TextColor="White"
                               FontFamily="Jersey15"/>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Articles Collection -->
            <CollectionView ItemsSource="{Binding Articles}"
                          ItemsLayout="VerticalList"
                          Margin="0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E293B"
                               Margin="0,0,0,15"
                               Padding="15"
                               CornerRadius="16"
                               HasShadow="False"
                               BorderColor="#334155">
                            <Grid RowSpacing="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header with Three Dots Menu -->
                                <Grid Grid.Row="0">
                                    <HorizontalStackLayout>
                                        <Frame HeightRequest="30" 
                                               WidthRequest="30"
                                               CornerRadius="15"
                                               Padding="0"
                                               IsClippedToBounds="True">
                                            <Image Aspect="AspectFill"
                                                   Source="{Binding AuthorImage}"/>
                                        </Frame>
                                        <Label Text="{Binding Author}"
                                               TextColor="White"
                                               FontFamily="Jersey15"
                                               VerticalOptions="Center"
                                               Margin="10,0"/>
                                    </HorizontalStackLayout>
                                    <Button Text="⋮"
                                            FontSize="20"
                                            TextColor="White"
                                            BackgroundColor="Transparent"
                                            HorizontalOptions="End"
                                            Padding="0"/>
                                </Grid>

                                <!-- Article Image -->
                                <Frame Grid.Row="1"
                                       Padding="0"
                                       IsClippedToBounds="True"
                                       CornerRadius="12">
                                    <Image Source="{Binding ImageUrl}"
                                           Aspect="AspectFill"
                                           HeightRequest="200"/>
                                </Frame>

                                <!-- Article Title -->
                                <Label Grid.Row="2"
                                       Text="{Binding Title}"
                                       TextColor="White"
                                       FontSize="20"
                                       FontFamily="Jersey15"/>

                                <!-- Article Info -->
                                <Grid Grid.Row="3" 
                                      ColumnDefinitions="Auto,*,Auto">
                                    <HorizontalStackLayout Grid.Column="0" 
                                                         Spacing="15">
                                        <Label Text="{Binding ReadTime}"
                                               TextColor="#94A3B8"
                                               FontSize="14"
                                               FontFamily="Jersey15"/>
                                        <Label Text="•"
                                               TextColor="#94A3B8"/>
                                        <Label Text="{Binding Category}"
                                               TextColor="#4F46E5"
                                               FontSize="14"
                                               FontFamily="Jersey15"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Grid.Column="2" 
                                                         Spacing="15">
                                        <Button ImageSource="heart.png"
                                                BackgroundColor="Transparent"
                                                WidthRequest="24"
                                                HeightRequest="24"/>
                                        <Button ImageSource="bookmark.png"
                                                BackgroundColor="Transparent"
                                                WidthRequest="24"
                                                HeightRequest="24"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>